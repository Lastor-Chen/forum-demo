<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" href="/restaurants">首頁</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="/restaurants/feeds">最新動態</a>
  </li>
</ul>
<br /><br />
<ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link {{#unless CategoryId}}active{{/unless}}" href="/restaurants">全部</a>
  </li>
  {{#each categories}}
    <li class="nav-item">
      <a class="nav-link  {{#ifEqual id ../CategoryId}}active{{/ifEqual}}" href="?categoryId={{id}}">{{name}}</a>
    </li>
  {{/each}}
</ul>
<br />
<div class="row">
  {{#each restaurants}}
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <img class="card-img-top" src="{{image}}" alt="Card image cap" width="286px" height="180px">
        <div class="card-body">
          <p class="card-text">
            <a href="/restaurants/{{id}}">{{name}}</a>
          </p>
          <span class="badge badge-secondary">{{Category.name}}</span>
          <div class="card-text line-camp">{{description}}</div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<br />
<br />
<nav aria-label="Page navigation example">
  <ul class="pagination">
    <li class="page-item">
      <a class="page-link" href="/restaurants?page={{prev}}&categoryId={{CategoryId}}" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    {{#each pagesArray}}
      {{#ifEqual this ../page}}
        <li class="page-item active">
          <a class="page-link" href="#">{{this}}</a>
        </li>
      {{else}}
        <li class="page-item">
          <a class="page-link" href="/restaurants?page={{this}}&categoryId={{../CategoryId}}">{{this}}</a>
        </li>
      {{/ifEqual}}
    {{/each}}
    <a class="page-link" href="/restaurants?page={{next}}&categoryId={{CategoryId}}" aria-label="Next">
      <span aria-hidden="true">&raquo;</span>
    </a>
    </li>
  </ul>
</nav>