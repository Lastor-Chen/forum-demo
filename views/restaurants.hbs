<ul class="nav nav-pills">
  <li class="nav-item">
    <a class="nav-link {{#if CategoryId}}{{else}}active{{/if}}" href="/restaurants">全部</a>
  </li>
  {{#each categories}}
    <li class="nav-item">
      <a class="nav-link  {{#ifEqual id ../CategoryId}}active{{/ifEqual}}" href="?categoryId={{id}}">{{name}}</a>
    </li>
  {{/each}}
</ul>
<br />
<div class="row">
  {{#each restaurants}}
    <div class="col-md-4">
      <div class="card mb-4 shadow-sm">
        <img class="card-img-top" src="{{image}}" alt="Card image cap" width="286px" height="180px">
        <div class="card-body">
          <p class="card-text">
            <a href="/restaurants/{{id}}">{{name}}</a>
          </p>
          <span class="badge badge-secondary">{{Category.name}}</span>
          <div class="card-text line-camp">{{description}}</div>
        </div>
      </div>
    </div>
  {{/each}}
</div>
<br />
<br />