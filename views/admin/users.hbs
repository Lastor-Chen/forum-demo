<h1>餐廳後台</h1>
<div>
  <a href="/admin/restaurants">Restaurants</a>
  <span>|</span>
  <a href="/admin/users">Users</a>
</div>
<br />
<br />
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      <tr class="align-middle">
        <th scope="row" class="align-middle">{{id}}</th>
        <td class="align-middle">{{email}}</td>
        <td class="align-middle">{{#if isAdmin}}admin{{else}}user{{/if}}</td>
        <td class="align-middle">
          <form action="/admin/users/{{id}}?_method=PUT" method="POST">
            <button type="submit" class="btn btn-link">set as {{#if isAdmin}}user{{else}}admin{{/if}}</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>