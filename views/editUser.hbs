<div class="card flex-row">
  <div class="card-body">
    <form action="/users/{{user.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="{{user.name}}" placeholder="Enter name">
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input type="file" class="d-block" id="image" name="image">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <a href="/users/{{user.id}}" class="btn btn-outline-primary">Cancel</a>
    </form>
  </div>
</div>